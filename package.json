{
  "name": "4.blogpersonal",
  "version": "1.0.0",
  "scripts": {
    "copy-assets": "cpx \"src/components/**/*.html\" public/dist/components && cpx \"src/components/**/*.css\" public/dist/components",
    "build": "tsc && npm run copy-assets",
    "start": "npm run build && http-server public",
    "watch-ts": "tsc --watch",
    "watch-assets": "cpx \"src/components/**/*.html\" public/dist/components --watch & cpx \"src/components/**/*.css\" public/dist/components --watch",
    "dev": "concurrently \"npm run watch-ts\" \"npm run watch-assets\" \"http-server public\""
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "typescript": "^5.x.x"
  }
}